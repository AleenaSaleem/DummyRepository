<UserControl x:Class="Frontend.AddBed"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Frontend"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Select Icu" Margin="10" FontSize="20"></TextBlock>
            <ComboBox x:Name="icuList" Width="250" ItemsSource="{Binding Path=IcuList}" ></ComboBox>
            <Button Content="Add" Margin="20" Width="100" Click="AddButton_Click"></Button>
        </StackPanel>
    </DockPanel>
</UserControl>
