<UserControl x:Class="Frontend.DeleteBed"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Frontend"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Select Icu" Margin="10" FontSize="20"></TextBlock>
            <ComboBox x:Name="icuList" Width="250" ItemsSource="{Binding Path=IcuList}" SelectionChanged="icuList_SelectionChanged"></ComboBox>
            <TextBlock Text="Select Bed" Margin="10" FontSize="20"></TextBlock>
            <ComboBox x:Name="bedList" Width="250" ItemsSource="{Binding Path=BedList}" ></ComboBox>
            <Button Content="Delete" Margin="20" Width="100" Click="DeleteButton_Click"></Button>
        </StackPanel>
    </DockPanel>
</UserControl>
