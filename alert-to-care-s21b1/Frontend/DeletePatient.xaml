<UserControl x:Class="Frontend.DeletePatient"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Frontend"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <Button x:Name="backButton" Content="Back" DockPanel.Dock="Top" HorizontalAlignment="Left" Width="70" Height="30" FontSize="20" Margin="10" Click="backButton_Click"></Button>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Select PatientId: " FontSize="20" Margin="10"></TextBlock>
            <ComboBox x:Name="patientIdList" ItemsSource="{Binding Path=PatientIdList}" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="250" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"></ComboBox>
            <Button x:Name="deleteButton" Content="Discharge" Click="deleteButton_Click" Margin="20"></Button>
        </StackPanel>
        
        
    </DockPanel>
</UserControl>
