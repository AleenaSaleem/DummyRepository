<UserControl x:Class="Frontend.ViewAllControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Frontend"
             mc:Ignorable="d" 
             d:DesignHeight="{x:Static SystemParameters.PrimaryScreenHeight}" d:DesignWidth="{x:Static SystemParameters.PrimaryScreenWidth}">
    <ListView HorizontalAlignment="Center" VerticalAlignment="Center">
        <ListViewItem Content="All ICUs" Selected="AllICUs_Selected" HorizontalAlignment="Center"></ListViewItem>
        <ListViewItem Content="All Beds" Selected="AllBeds_Selected" HorizontalAlignment="Center"></ListViewItem>
        <ListViewItem Content="All Patients" Selected="AllPatients_Selected" HorizontalAlignment="Center"></ListViewItem>
        <ListViewItem Content="Bed in ICU" Selected="BedInICU_Selected" HorizontalAlignment="Center"></ListViewItem>
    </ListView>

</UserControl>
