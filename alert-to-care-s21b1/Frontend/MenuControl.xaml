<UserControl x:Class="Frontend.MenuControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Frontend"
             mc:Ignorable="d" 
             d:DesignHeight="{x:Static SystemParameters.PrimaryScreenHeight}" d:DesignWidth="{x:Static SystemParameters.PrimaryScreenWidth}">
    
        <ListView HorizontalAlignment="Center" VerticalAlignment="Center">
            <ListViewItem Content="Add ICU" Selected="AddIcuItem_Selected" HorizontalAlignment="Center"></ListViewItem>
            <ListViewItem Content="Add Bed" Selected="AddBedItem_Selected" HorizontalAlignment="Center"></ListViewItem>
            <ListViewItem Content="Delete ICU" Selected="DeleteIcuItem_Selected" HorizontalAlignment="Center"></ListViewItem>
            <ListViewItem Content="Delete Bed" Selected="DeleteBedItem_Selected" HorizontalAlignment="Center"></ListViewItem>
            <ListViewItem Content="Add Patient" Selected="AddPatientItem_Selected" HorizontalAlignment="Center"></ListViewItem>
            <ListViewItem Content="Delete Patient" Selected="DeletePatientItem_Selected" HorizontalAlignment="Center"></ListViewItem>
        </ListView>
    
</UserControl>
